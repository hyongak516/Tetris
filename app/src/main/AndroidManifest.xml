<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tetris">

    <application
        android:allowBackup="true"
        android:icon="@drawable/tetris_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tetris_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tetris">
        <activity android:name=".Activity.InfoActivity"></activity>
        <activity android:name=".Activity.RankingActivity" />
        <activity android:name=".Activity.GameOverActivity" />
        <activity android:name=".Activity.GameActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>